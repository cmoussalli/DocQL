@using System.Reflection

<Modal IsVisible="@IsVisible" Title="About DocQL" OnClose="@OnClose" Size="Modal.ModalSize.Small">
    <div style="text-align: center; padding: 16px 8px;">
        <!-- App Icon -->
        <div style="margin-bottom: 16px; color: var(--text-accent);">
            <svg viewBox="0 0 48 48" width="64" height="64" fill="currentColor">
                <ellipse cx="24" cy="10" rx="18" ry="6"/>
                <path d="M6 10v8c0 3.3 8.1 6 18 6s18-2.7 18-6V10" fill="none" stroke="currentColor" stroke-width="3"/>
                <path d="M6 18v8c0 3.3 8.1 6 18 6s18-2.7 18-6v-8" fill="none" stroke="currentColor" stroke-width="3"/>
                <path d="M6 26v8c0 3.3 8.1 6 18 6s18-2.7 18-6v-8" fill="none" stroke="currentColor" stroke-width="3"/>
            </svg>
        </div>

        <h2 style="font-size: var(--font-size-lg); margin-bottom: 4px; color: var(--text-primary);">DocQL</h2>
        <p style="font-size: var(--font-size-sm); color: var(--text-secondary); margin-bottom: 16px;">
            A web-based Data Studio for SQL Server
        </p>

        <!-- Version Info -->
        <div style="background: var(--bg-tertiary); border-radius: 6px; padding: 12px 16px; margin-bottom: 16px; text-align: left;">
            <div style="display: flex; justify-content: space-between; margin-bottom: 6px;">
                <span style="font-size: var(--font-size-sm); color: var(--text-secondary);">Version</span>
                <span style="font-size: var(--font-size-sm); color: var(--text-primary);">@AppVersion</span>
            </div>
            <div style="display: flex; justify-content: space-between; margin-bottom: 6px;">
                <span style="font-size: var(--font-size-sm); color: var(--text-secondary);">Runtime</span>
                <span style="font-size: var(--font-size-sm); color: var(--text-primary);">@RuntimeVersion</span>
            </div>
            <div style="display: flex; justify-content: space-between;">
                <span style="font-size: var(--font-size-sm); color: var(--text-secondary);">Platform</span>
                <span style="font-size: var(--font-size-sm); color: var(--text-primary);">@Platform</span>
            </div>
        </div>

        <!-- Links -->
        <div style="display: flex; flex-direction: column; gap: 8px; margin-bottom: 16px;">
            <a href="https://github.com/AmpedBiz/DocQL" target="_blank" rel="noopener noreferrer"
               style="display: flex; align-items: center; justify-content: center; gap: 8px; padding: 8px 12px; background: var(--bg-tertiary); border-radius: 4px; color: var(--text-link); text-decoration: none; font-size: var(--font-size-sm); border: 1px solid var(--border-primary);">
                <svg viewBox="0 0 16 16" width="16" height="16" fill="currentColor">
                    <path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
                </svg>
                GitHub Repository
            </a>
            <a href="https://github.com/AmpedBiz/DocQL/issues" target="_blank" rel="noopener noreferrer"
               style="display: flex; align-items: center; justify-content: center; gap: 8px; padding: 8px 12px; background: var(--bg-tertiary); border-radius: 4px; color: var(--text-link); text-decoration: none; font-size: var(--font-size-sm); border: 1px solid var(--border-primary);">
                <svg viewBox="0 0 16 16" width="16" height="16" fill="currentColor">
                    <path d="M8 1.5a6.5 6.5 0 100 13 6.5 6.5 0 000-13zM0 8a8 8 0 1116 0A8 8 0 010 8zm9-3a1 1 0 11-2 0 1 1 0 012 0zM6.75 8a.75.75 0 011.5 0v3.25a.75.75 0 01-1.5 0V8z"/>
                </svg>
                Report an Issue
            </a>
        </div>

        <!-- Contact -->
        <p style="font-size: var(--font-size-xs); color: var(--text-muted);">
            &copy; @DateTime.Now.Year DocQL Contributors. Licensed under MIT.
        </p>
    </div>
</Modal>

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    private string AppVersion =>
        Assembly.GetExecutingAssembly()
            .GetCustomAttribute<AssemblyInformationalVersionAttribute>()?.InformationalVersion
        ?? Assembly.GetExecutingAssembly().GetName().Version?.ToString()
        ?? "1.0.0";

    private string RuntimeVersion => System.Runtime.InteropServices.RuntimeInformation.FrameworkDescription;

    private string Platform => System.Runtime.InteropServices.RuntimeInformation.OSDescription;
}
